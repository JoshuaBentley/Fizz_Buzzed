<!-- Loop over each object in the projects array -->
{{#each prodcuts as |prodcut| }}
<div class="row mb-4 prodcut">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/prodcut/{{prodcut.id}}">{{prodcut.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount prodcut.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{prodcut.user.name}} on {{format_date prodcut.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{prodcut.description}}
    </p>
  </div>
</div>
{{/each}}
